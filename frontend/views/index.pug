doctype html
html(lang='en')
  head
    title Giphy App
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Dosis:400,700')
    style.
      #root { max-width: 1200px; margin: 0 auto; }
      .container { display: flex;flex-wrap: wrap; }
      .card { margin: 1rem; border: 1px solid gray;}
      @media screen and (min-width: 600px) {
        .card {
          flex: 1 1 calc(50% - 2rem);
        }
      }
      @media screen and (min-width: 900px) {
        .card {
            flex: 1 1 calc(33% - 2rem);
        }
      }
  body
    h1(style={"text-align": "center"}) Giphy App
    div.root
      div.container
        each gif in giphy
          div.card
            h1 #{gif.title}
            img(src=gif.url)
